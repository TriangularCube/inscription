{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2022",
    "moduleResolution": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,

    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
